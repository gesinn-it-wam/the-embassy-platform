// Home
body.page-Main_Page .navigation .nav a#n-Home{
  &:after{
    @extend .active-link-after;
    @include media-breakpoint-up(lg) {
      background-color: #000 !important;
    }
  }

  @include media-breakpoint-down(lg) {
    color:#fff;
  }
}

