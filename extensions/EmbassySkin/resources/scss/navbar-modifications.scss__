.active-link-after{
  position:absolute;
  bottom:0;
  left:50%;
  width:100%;
  height:2px;
  content:" ";
  -webkit-transform:translateX(-50%);
  transform:translateX(-50%);
  background-color:#f6d30b
}


// ns-7600: Theme
body.page-Themes .navigation .nav a#n-Themes:after,
body.page-Themes .navigation .nav a#n-Themes,
body.page-Category_Theme .navigation .nav a#n-Themes,
body.ns-7600 .navigation .nav a#n-Themes{

  &:after{
    @extend .active-link-after;
  }

  @include media-breakpoint-down(lg) {
    color:#fff;
  }
}

