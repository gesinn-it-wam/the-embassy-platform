@media (max-width:1023.98px){
  body.page-Category_Theme .navigation .nav a#n-Themes:after,
  body.ns-7600 .navigation .nav a#n-Themes:after,
  body.page-Themes .navigation .nav a#n-Themes:after,
  body.page-Category_Resource .navigation .nav a#n-Resources:after,
  body.ns-7700 .navigation .nav a#n-Resources:after,
  body.page-Resources .navigation .nav a#n-Resources:after,
  body.page-Main_Page .navigation .nav a#n-Home:after,
  body.page-Discussions .navigation .nav a#n-Discussions:after,
  body.page-Training .navigation .nav a#n-Training:after,
  body.page-About .navigation .nav a#n-About:after{
    background-color:transparent
  }
}

@media (min-width:1024px){
  body.page-Category_Theme .navigation .nav a#n-Themes,
  body.ns-7600 .navigation .nav a#n-Themes,
  body.page-Themes .navigation .nav a#n-Themes:after,
  body.page-Category_Resource .navigation .nav a#n-Resources,
  body.ns-7700 .navigation .nav a#n-Resources,
  body.page-Resources .navigation .nav a#n-Resources:after,
  body.page-Main_Page .navigation .nav a#n-Home,
  body.page-Discussions .navigation .nav a#n-Discussions,
  body.page-Training .navigation .nav a#n-Training,
  body.page-About .navigation .nav a#n-About{
    color:#000;
  }
}